{
  "name": "fips-frontend",
  "version": "1.0.0",
  "description": "FIPS Frontend SCSS Build",
  "scripts": {
    "build-css": "sass wwwroot/scss:wwwroot/css --style=compressed --source-map",
    "watch-css": "sass wwwroot/scss:wwwroot/css --watch --style=expanded --source-map",
    "build": "npm run build-css",
    "dev": "npm run watch-css",
    "test:accessibility": "node scripts/accessibility-test.js",
    "test:accessibility:ci": "node scripts/accessibility-test.js --ci",
    "lighthouse:accessibility": "lighthouse http://localhost:5000 --only-categories=accessibility --output=html --output-path=./reports/accessibility-report.html"
  },
  "devDependencies": {
    "@ministryofjustice/frontend": "^5.1.5",
    "accessible-autocomplete": "^3.0.1",
    "govuk-frontend": "^5.11.2",
    "sass": "^1.69.5",
    "axe-core": "^4.8.4",
    "puppeteer": "^21.6.1",
    "lighthouse": "^11.4.0",
    "jest": "^29.7.0",
    "jest-puppeteer": "^9.0.0"
  }
}
